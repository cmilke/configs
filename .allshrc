remotelink() {
    mntpoint="/mnt/sshfs/$1"
    if (( $# == 2 )) && [[ $2 == 'kill' ]]; then
        pkill -9 sshfs &&
        fusermount3 -u $mntpoint
    elif [[ -z $(ls $mntpoint) ]]; then
        if [[ $1 == 'slac' ]]; then
            cat $HOME/.ssh/.slac | sshfs -o password_stdin -o follow_symlinks $SLAC:/nfs/slac/g/atlas/u02/cmilke $mntpoint &&
            echo "Mounted $SLAC"
        fi

        if [[ $1 == 'mane' ]]; then
            sshfs -o follow_symlinks $MANEFRAME:/scratch/users/cmilke $mntpoint &&
            echo "Mounted $MANEFRAME"
        fi
    else
        fusermount3 -u $mntpoint &&
        echo "Unmounted $mntpoint"
    fi
}
